<%= form_for(profile) do |f| %>

<p>プロフィール</p>
<%= f.label :content %><br>
<%= f.text_area :content, cols: 80, rows: 10%><br>

<%= f.label :gender %><br>
<label><%= f.radio_button :gender, 'unknown' %> 不明 </label>
<label><%= f.radio_button :gender, 'male' %> 男 </label>
<label><%= f.radio_button :gender, 'female' %> 女 </label><br><br>

<%= f.label :area %><br>
<%= f.select :area, [
'北海道', 
'青森県', '岩手県', '宮城県', '秋田県', '山形県', '福島県',
'茨城県', '栃木県', '群馬県', '埼玉県', '千葉県', '東京都', '神奈川県',
'新潟県', '富山県', '石川県', '福井県', '山梨県', '長野県', '岐阜県', '静岡県', '愛知県',
'三重県', '滋賀県', '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県',
'鳥取県', '島根県', '岡山県', '広島県', '山口県',
'徳島県', '香川県', '愛媛県', '高知県', 
'福岡県', '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県', '鹿児島県',
'沖縄県'
], 
{ include_blank: '選択して下しさい'} %><br><br>

<%= f.label :interests %><br>
<%= f.select :interests, [
'音楽', 'スポーツ', 'グルメ', 'エンタメ', '旅行', 'ビジネス'],
{ include_blank: '選択して下しさい'} %><br><br>

<%= f.label :job %><br>
<%= f.select :job, [
'医療', '情報通信', '芸能', '飲食', '建築', '金融・会計'],
{ include_blank: '選択して下しさい'} %><br><br>

<%= f.label :birth_date %>
<%= f.date_field :birth_date %><br><br>

<%= f.submit %>

<% end %>